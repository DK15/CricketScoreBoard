            android:paddingLeft="5dp"  -->
            />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enterTeamEditView"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="30dp"
            android:hint="Enter team name"
            android:maxLines="1"
            />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bat1EditView"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="30dp"
            android:hint="Enter Batsman1"
            />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bat2EditView"
            android:layout_gravity="center"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="30dp"
            android:hint="Enter Batsman2"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startBtn"
            android:text="START GAME"
            android:layout_gravity="center"
            android:layout_alignBottom="@id/bat2EditView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="30dp"

            />

    <Button
            android:id="@+id/start_demo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_demo_button"/>


</RelativeLayout>
