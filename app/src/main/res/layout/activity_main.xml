<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:context="com.example.android.cricketscoreboard.MainActivity">

    <com.example.android.cricketscoreboard.customViews.ScoreRowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:primaryText="Darshannnnn"
            app:secondayText="1337"
            android:layout_alignBottom="@+id/bat2_init_txt"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="teamname"
            android:layout_alignBottom="@+id/view"
            android:layout_centerHorizontal="true"
            android:id="@+id/teamNameTxtView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BATSMEN"
            android:layout_marginLeft="5dp"
            android:id="@+id/batsmen_txt_view"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BATSMAN1"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/batsmen1_txt_view"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_toRightOf="@id/batsmen1_txt_view"
            android:layout_marginTop="24dp"
            android:id="@+id/batsmen1_high"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BATSMAN2"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/batsmen1_txt_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/batsmen2_txt_view"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_toRightOf="@id/batsmen2_txt_view"
            android:layout_marginTop="58dp"
            android:id="@+id/batsmen2_high"
            android:visibility="invisible"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RUNS"
            android:layout_alignParentRight="true"
            android:id="@+id/runs_txt"
            android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/bat1_init_txt"
            android:layout_alignParentRight="true"
            android:layout_below="@id/runs_txt"
            android:layout_marginTop="14dp"
            android:layout_marginRight="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/bat2_init_txt"
            android:layout_alignParentRight="true"
            android:layout_below="@id/bat1_init_txt"
            android:layout_marginTop="14dp"
            android:layout_marginRight="10dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="18dp"
            android:id="@+id/view">

    </View>

    <!--   <ListView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/batsmen_list_view"
               android:scrollbars="vertical">

       </ListView>-->
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="5dp"
            android:text="1 Run"
            android:id="@+id/one_run_btn"
            android:onClick="oneRunScored"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Runs"
            android:id="@+id/two_run_btn"
            android:layout_alignBottom="@+id/one_run_btn"
            android:layout_toRightOf="@+id/one_run_btn"
            android:layout_toEndOf="@+id/one_run_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:onClick="twoRunScored"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Runs"
            android:id="@+id/three_run_btn"
            android:layout_alignBaseline="@+id/two_run_btn"
            android:layout_alignBottom="@+id/two_run_btn"
            android:layout_toRightOf="@+id/two_run_btn"
            android:layout_toEndOf="@+id/two_run_btn"
            android:onClick="threeRunScored"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Runs"
            android:id="@+id/four_run_btn"
            android:onClick="fourRunScored"
            android:layout_alignBaseline="@+id/three_run_btn"
            android:layout_alignBottom="@+id/three_run_btn"
            android:layout_toRightOf="@+id/three_run_btn"
            android:layout_toEndOf="@+id/three_run_btn"
            android:layout_marginRight="5dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 Runs"
            android:id="@+id/six_run_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="4dp"
            android:onClick="sixRunScored"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OUT"
            android:id="@+id/out_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/two_run_btn"
            android:layout_alignStart="@+id/two_run_btn"
            android:layout_marginBottom="4dp"
            android:onClick="out"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:id="@+id/reset_btn"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/out_btn"
            android:layout_marginBottom="4dp"
            android:onClick="reset"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT BAT"
            android:id="@+id/next_btn"
            android:onClick="next"
            android:layout_alignBottom="@+id/reset_btn"
            android:layout_toRightOf="@+id/reset_btn"
            android:layout_toEndOf="@+id/reset_btn"/>
</RelativeLayout>
