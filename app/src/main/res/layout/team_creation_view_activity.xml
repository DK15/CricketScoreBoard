<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/team_selection_margins">

    <android.support.v7.widget.CardView
        android:id="@+id/create_new_team_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/create_new_team_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="@dimen/create_new_team_button_height"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:stateListAnimator="@animator/card_view_clickable_animation"
                android:text="@string/team_creation_create_team"
                android:textSize="@dimen/create_new_tew_team_text_size" />

            <LinearLayout
                android:id="@+id/team_name_input_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/team_name_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/team_creation_edit_text_margin"
                    android:layout_marginStart="@dimen/team_creation_edit_text_margin"
                    android:layout_weight="0.9"
                    android:inputType="text" />

                <Button
                    android:id="@+id/set_team_name_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/team_creation_button_margin"
                    android:layout_marginLeft="@dimen/team_creation_button_margin"
                    android:layout_marginRight="@dimen/team_creation_button_margin"
                    android:layout_marginStart="@dimen/team_creation_button_margin"
                    android:layout_weight="0.1"
                    android:background="@mipmap/ic_done_black_18dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/team_image_width"
                    android:scaleType="centerCrop"
                    android:stateListAnimator="@animator/card_view_clickable_animation" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/player_name_input_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/player_name_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/team_creation_edit_text_margin"
                    android:layout_marginStart="@dimen/team_creation_edit_text_margin"
                    android:layout_weight="0.9"
                    android:inputType="text" />

                <Button
                    android:id="@+id/add_player_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/team_creation_button_margin"
                    android:layout_marginLeft="@dimen/team_creation_button_margin"
                    android:layout_marginRight="@dimen/team_creation_button_margin"
                    android:layout_marginStart="@dimen/team_creation_button_margin"
                    android:layout_weight="0.1"
                    android:background="@mipmap/ic_done_black_18dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/team_image_width"
                    android:stateListAnimator="@animator/card_view_clickable_animation" />

            </LinearLayout>

            <ListView
                android:id="@+id/team_creation_player_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>